import os
import subprocess
import sys
from .util import assert_contains_markers

def test_cli_demo_golden():
    env = os.environ.copy()
    env["AUTO_APPROVE"] = "1"
    p = subprocess.run([sys.executable, "-m", "clarissa", "demo"], capture_output=True, text=True, env=env)
    assert p.returncode == 0
    out = p.stdout + "\n" + p.stderr
    assert_contains_markers(out, ["[gov]", "[sim]", "[clarissa/llm]"])
